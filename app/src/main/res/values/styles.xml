<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog.Error">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d50000</item>
        <item name="colorPrimaryDark">#9b0000</item>
        <item name="colorAccent">#ff5131</item>
    </style>

    <style name="AppTheme.Dialog.Warning">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff9100</item>
        <item name="colorPrimaryDark">#c56200</item>
        <item name="colorAccent">#ffc246</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Card">
        <item name="android:background">@drawable/rc_white_solid</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">@dimen/margin_default</item>

    </style>

</resources>
